<% if (adminRecord && adminRecord.id) { %>
    <form id="adminForm" method="POST" action="/admin/update/<%= adminRecord.id %>">
<% } else { %>
    <form id="adminForm" method="POST" action="/admin/create">
<% } %>
        <div class="form-group row">

            <label class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="firstName" value="<% if (adminRecord.firstName) { %><%= adminRecord.firstName %><% } %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="lastName" value="<% if (adminRecord.lastName) { %><%= adminRecord.lastName %><% } %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="email" value="<% if (adminRecord.email) { %><%= adminRecord.email %><% } %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" value="">
                <!-- <input type="password" class="form-control" name="password" value="<% if (adminRecord.password) { %><%= adminRecord.password %><% } %>"> -->
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group row">
            <div class="col-sm-4 col-sm-offset-2">
                <a href="/admin/admins" class="btn btn-white btn-sm">Cancel</a>
                <button class="btn btn-primary btn-sm" type="submit">Save changes</button>
            </div>
        </div>
    </form>